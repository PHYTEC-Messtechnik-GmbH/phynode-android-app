<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/list_item_padding_start_end">

    <LinearLayout
        android:id="@+id/item_device"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:minHeight="@dimen/list_item_min_height"
        android:paddingStart="@dimen/list_item_padding_start_end"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/ListItemPrimary"
            android:id="@+id/item_device_address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="MAC Address" />

        <TextView
            android:textAppearance="@style/ListItemSecondary"
            android:id="@+id/item_device_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Device Name" />

        <TextView
            android:textAppearance="@style/ListItemSecondary"
            android:id="@+id/item_device_rssi"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="RSSI" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/item_device_favourite"
        style="?android:actionButtonStyle"
        android:src="@drawable/ic_star_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>